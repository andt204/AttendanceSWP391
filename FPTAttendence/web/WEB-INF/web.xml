<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>EmployeesController</servlet-name>
        <servlet-class>controller.EmployeesController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerController</servlet-name>
        <servlet-class>controller.ManagerController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DashboardControler</servlet-name>
        <servlet-class>controller.DashboardControler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeesController</servlet-name>
        <url-pattern>/HomeEmployees</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerController</servlet-name>
        <url-pattern>/HomeManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DashboardControler</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>allDepServlet</servlet-name>
        <servlet-class>controller.allDepServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addDep</servlet-name>
        <servlet-class>controller.addDep</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDepartment</servlet-name>
        <servlet-class>controller.DeleteDepartment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allDepServlet</servlet-name>
        <url-pattern>/department</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addDep</servlet-name>
        <url-pattern>/addDep</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDepartment</servlet-name>
        <url-pattern>/DeleteDepartment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>In4Employees</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>In4Employees</servlet-name>
        <servlet-class>controller.In4Employees</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
        <!-- Thời gian session (phút) -->
    </session-config>
</web-app>
